# Tiny Backspace Environment Variables
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token (Required for PR creation)
# Create at: https://github.com/settings/tokens
# Needs: repo, workflow permissions
GITHUB_PAT=your_github_personal_access_token_here

# Anthropic API Key (Required for Claude Code)
# Get at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# E2B API Key (Required for sandbox environment)
# Get at: https://e2b.dev/
E2B_API_KEY=your_e2b_api_key_here

# LangSmith API Key (Optional - for observability)
# Get at: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# LangSmith Project (Optional)
LANGSMITH_PROJECT=tiny-backspace

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false 